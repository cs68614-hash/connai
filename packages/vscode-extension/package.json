{
  "name": "@connai/vscode-extension",
  "displayName": "ConnAI",
  "description": "Bridge VS Code with web clients for AI-powered code context sharing and remote control",
  "version": "0.0.1",
  "publisher": "connai",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "context",
    "remote",
    "websocket",
    "bridge"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "connai.startServer",
        "title": "Start ConnAI Server",
        "category": "ConnAI"
      },
      {
        "command": "connai.stopServer",
        "title": "Stop ConnAI Server",
        "category": "ConnAI"
      },
      {
        "command": "connai.login",
        "title": "Login to ConnAI",
        "category": "ConnAI"
      },
      {
        "command": "connai.logout",
        "title": "Logout from ConnAI",
        "category": "ConnAI"
      },
      {
        "command": "connai.showStatus",
        "title": "Show ConnAI Status",
        "category": "ConnAI"
      }
    ],
    "configuration": {
      "title": "ConnAI",
      "properties": {
        "connai.server.port": {
          "type": "number",
          "default": 8080,
          "description": "WebSocket server port"
        },
        "connai.server.host": {
          "type": "string",
          "default": "localhost",
          "description": "WebSocket server host"
        },
        "connai.auth.whopApiKey": {
          "type": "string",
          "default": "",
          "description": "Whop API key for authentication"
        },
        "connai.auth.productId": {
          "type": "string", 
          "default": "",
          "description": "Whop product ID"
        },
        "connai.machine.maxDevices": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of devices per subscription"
        },
        "connai.cache.ttl": {
          "type": "number",
          "default": 300000,
          "description": "Cache TTL in milliseconds"
        },
        "connai.ignore.useGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Use .gitignore rules for filtering files"
        },
        "connai.ignore.customPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Custom ignore patterns"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "connai.startServer",
          "when": "true"
        },
        {
          "command": "connai.stopServer", 
          "when": "true"
        },
        {
          "command": "connai.login",
          "when": "true"
        },
        {
          "command": "connai.logout",
          "when": "true"
        },
        {
          "command": "connai.showStatus",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@connai/shared": "workspace:*",
    "@connai/protocol": "workspace:*",
    "@types/ws": "^8.5.12",
    "axios": "^1.7.9",
    "engine.io": "^6.6.4",
    "file-type": "^21.0.0",
    "gpt-tok": "^0.0.1",
    "ignore": "^5.3.2",
    "socket.io": "^4.8.1",
    "tiktoken": "^1.0.15",
    "ws": "^8.18.0",
    "yauzl": "^3.2.0"
  }
}
